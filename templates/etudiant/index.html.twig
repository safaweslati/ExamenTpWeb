<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/journal/bootstrap.min.css">
    <title>Liste des Etudiants</title>
</head>
<body>
    <div class="container">
    <table class="table table-hover table-dark">
        <thead>
        <tr>
            <th scope="col">Firstname</th>
            <th scope="col">name</th>
            <th scope="col">Section</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for etudiant in etudiants %}
            <tr class="{{ random(["table-primary",
                "table-secondary",
                "table-success",
                "table-danger",
                "table-warning",
                "table-info",
                "table-light",
                "table-dark"]) }}">
            <td>{{ etudiant.name }}</td>
            <td>{{ etudiant.firstname }}</td>
            <td>{% if etudiant.section is defined %}{{ etudiant.section }} {% else %} Etudiant non affecté à une section</td>
            <td>
                <a href="{{ path('add_etudiant',{ id:etudiant.id}) }}">Edit</a>
                <a href="{{ path('delete_etudiant',{ id:etudiant.id}) }}">delete</a>
            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</body>
</html>